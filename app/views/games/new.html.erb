<h2 style ="font-size: 36px">New game</h2>
<div class="flex">
<% @letters.each do |letter| %>
    <p class="letter-box"><%= letter %></p>
 <% end %>
</div>

<div class ="input">
  <p> What is the longest word you can make? </p>

<form action="/score" method="post" data-turbo="false" class="flex">
  <input type="text" name="word" placeholder="Type a word here" style="width:80%">
  <%= hidden_field_tag :letters, @letters %>
  <input type="submit" value="Play" class="btn btn-secondary">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
</div>
